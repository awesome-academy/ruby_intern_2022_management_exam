<div class="align-center">
  <%= search_form_for [:admin, @search], class:"navbar-form" do |f| %>
    <div class="input-group flex align-end">
      <div class="flex">
        <div class="flex flex-col align-left">
          <%= label :name, t(".search_name") %>
          <%= f.search_field :name_or_email_cont, class:"form-control" %>
        </div>
      </div>
      <div class="flex">
        <div class="flex flex-col align-left m-l-5">
          <%= label :name, t(".starte_date") %>
          <%= f.date_field :by_start_date, class:"form-control" %>
        </div>
        <div class="flex flex-col align-left m-l-5">
          <%= label :name, t(".end_date") %>
          <%= f.date_field :by_end_date, class:"form-control" %>
        </div>
      </div>
      <div class="input-group-btn m-l-5">
        <%= button_tag(type: :submit, class: "btn btn-default") do %>
          <i class="glyphicon glyphicon-search"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
