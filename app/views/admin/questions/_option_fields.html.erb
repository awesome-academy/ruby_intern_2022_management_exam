<div class="nested-fields">
  <div>
    <%= f.label :description, t(".answer") %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="flex">
    <%= f.label :status, t(".correct") %>
    <%= f.check_box :status, :as => :boolean, class:"w-25" %>
  </div>
  <%= link_to_remove_association f do %>
    <i class="fa-solid fa-trash-can"></i>
    <%= t ".remove_answer" %>
  <% end %>
</div>
